<div class="banner" style="background-image: url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?q=80&w=3270&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)">
  <h1>My WatchList</h1>
</div>

<div class="container">

  <div class="d-flex justify-content-between my-4">
    <h2>My Lists</h2>
    <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
      Add a new list
    </button>
  </div>

<div class="container d-flex justify-content-center mt-5">
  <span class="mb-2 d-block"><small><em class="text-muted"><%= "You don't have any list yet!" if @lists.empty? %></em></small></span>
</div>

  <!-- Modal -->
  <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="staticBackdropLabel">Add a new list</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= render "lists/form" %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

<div class="row">
  <% @lists.each do |list| %>
    <div class="col-lg-3 col-md-6 mb-2">
      <div class="cards">
        <% if list.photo.attached? %>
          <div class="card-category" style="background-image: url('<%= cl_image_path list.photo.key %>')">
            <%= link_to list.name, list_path(list.id) %>
          </div>
        <% else %>
          <div class="card-category" style="background-image: url('<%= cl_image_path 'default_pic.png', height: 300, crop: :fill %>')">
            <%= link_to list.name, list_path(list.id) %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
