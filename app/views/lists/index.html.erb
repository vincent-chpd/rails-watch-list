<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?q=80&w=3270&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)">
  <h1>Welcome to WatchList</h1>
</div>

<div class="container">
  <div class="d-flex justify-content-between my-4">
    <h2>My Lists</h2>
    <%= link_to "+ Add List", new_list_path, class: "btn btn-warning" %>
  </div>

  <div class="row ">
    <% @lists.each do |list| %>
      <div class="col ">
        <div class="cards">
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path 'cld-sample-4', height: 300, crop: :fill %>')">
            <%= link_to list.name, list_path(list.id) %>
          </div>

        </div>
      </div>
    <% end %>
  </div>
</div>
