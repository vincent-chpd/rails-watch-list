<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?q=80&w=3270&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)">
  <h1><%= @list.name %></h1>
</div>

<div class="container d-flex justify-content-end mt-3">
  <%= link_to "+ Add movie",  class: "btn btn-warning" %>
  <%= link_to "Back to lists", lists_path, class: "btn btn-outline-dark" %>
  <%= link_to "Delete Lists", list_path(@list), class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
</div>

<div class="container d-flex justify-content-center mt-5">
  <span class="mb-2 d-block"><small><em class="text-muted"><%= "You haven't saved any movies yet!" if @list.movies.empty? %></em></small></span>
</div>
